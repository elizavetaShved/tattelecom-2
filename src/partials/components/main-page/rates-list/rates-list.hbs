    <div class="gl-slider__container">
      <ul class="gl-slider__wrapper">
        {{> main-page/rates-list/components/slide
          isHit=true
          title="Много минут"
          subtitle="Перейти по USSD *116*201#"
          unlimited=true
          calls1="500 мин. звонки по РТ"
          calls2="300 мин. звонки по РФ"
          calls3="Безлимитные звонки на Летай"
          opportunities="Смартфоны в рассрочку Кешбек 20%"
          price="350"
        }}
        {{> main-page/rates-list/components/slide
          title="Много интернета"
          subtitle="Перейти по USSD *116*204#"
          unlimited=true
          calls1="200 мин. звонки по РТ"
          opportunities="Смартфоны в рассрочку Кешбек 20%"
          price="240"
        }}
        {{> main-page/rates-list/components/slide
          title="Много минут"
          subtitle="Перейти по USSD *116*201#"
          unlimited=true
          calls1="500 мин. звонки по РТ"
          calls2="300 мин. звонки по РФ"
          calls3="Безлимитные звонки на Летай"
          opportunities="Смартфоны в рассрочку Кешбек 20%"
          price="350"
        }}
        {{> main-page/rates-list/components/slide
          title="Много минут"
          subtitle="Перейти по USSD *116*201#"
          unlimited=true
          calls1="500 мин. звонки по РТ"
          calls2="300 мин. звонки по РФ"
          calls3="Безлимитные звонки на Летай"
          opportunities="Смартфоны в рассрочку Кешбек 20%"
          price="350"
